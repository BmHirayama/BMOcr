<?xml version="1.0" encoding="utf-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        id="cordova-plugin-bm-ocr"
        version="1.0.0">

  <name>BmOcrPlugin</name>

  <engines>
    <engine name="cordova" version=">=3.4.0"/>
  </engines>

  <asset src="www/ocr.js" target="js/ocr.js"/>

  <js-module src="www/ocr.js" name="BmOcrPlugin">
    <clobbers target="ocr" />
  </js-module>

  <platform name="android">
    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="Plugin">
        <param name="android-package" value="jp.bluememe.plugin.ocr.Plugin"/>
        <param name="onload" value="true" />
      </feature>
    </config-file>
    <config-file target="AndroidManifest.xml" parent="/manifest">
      <uses-permission android:name="android.permission.CAMERA"/>
      <uses-feature android:name="android.hardware.camera" android:required="false"/>
      <uses-feature android:name="android.hardware.camera.autofocus" android:required="false"/>
    </config-file>
    <hook type="after_prepare" src="hooks/after_prepare.js"/>
    <source-file src="src/android/Plugin.java" target-dir="src/jp/bluememe/plugin/ocr/"/>
    <source-file src="src/android/plugin/PluginManager.java" target-dir="src/plugin/"/>
    <source-file src="src/android/plugin/Permission.java" target-dir="src/plugin/"/>
    <framework src="src/android/yourfile.gradle" custom="true" type="gradleReference" />
    <source-file framework="true" src="src/android/libs/DriverCardOCRLibrary.aar" target-dir="libs"/>
  </platform>

  <platform name="ios">
    <dependency id="cordova-plugin-add-swift-support" version="2.0.2"/>
    <config-file target="config.xml" parent="/widget">
      <feature name="Plugin">
        <param name="ios-package" value="jp.bluememe.plugin.ocr" />
        <param name="onload" value="true" />
      </feature>
    </config-file>
    <config-file target="*-Info.plist" parent="NSCameraUsageDescription">
	    <string>カードの認識に使用します。</string>
    </config-file>
    <source-file src="src/ios/Plugin.swift" target-dir="OCR" />
    <source-file src="src/ios/PluginManager.swift" target-dir="OCR" />
    <framework src="src/ios/framework/DriverCardOCRLibrary.framework" custom="true" embed="true" />
  </platform>

</plugin>